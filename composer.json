{
	"name": "boomcms/boomcms",
	"description": "BoomCMS is built on Laravel 5 and released under the MIT license. BoomCMS is designed to be easy to use for content editors and developers alike",
	"require": {
		"davidbarratt/custom-installer": "1.*",
		"boomcms/boom-core": ">=3.1",
		"boomcms/boom-installer": ">=1.0",
                "boomcms/theme-default": ">=1.1",
		"boomcms/boom-robotstxt": ">=3.1",
		"boomcms/boom-sitemap": ">=3.1"
	},
	"require-dev": {
                "boomcms/boom-core": "dev-master as 3.1.0",
                "boomcms/boom-installer": "dev-master as 1.1",
                "boomcms/theme-default": "dev-master as 1.1",
                "boomcms/boom-robotstxt": "dev-master as 3.1",
                "boomcms/boom-sitemap": "dev-master as 3.1"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Rob Taylor",
			"email": "rob@uxblondon.com"
		}
	],
	"autoload": {
		"psr-4": {
			"App\\": "app/"
		},
		"classmap": [
			"storage/boomcms/themes/"	
		]
	},
        "prefer-stable": true,
        "config": {
                "preferred-install": "dist"
        },
	"minimum-stability": "dev",
	"scripts": {
		"post-install-cmd": [
			"php artisan vendor:publish --force",
			"php artisan boomcms:installTemplates",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan vendor:publish --force",
			"php artisan clear-compiled",
			"php artisan boomcms:installTemplates",
			"php artisan migrate --path=migrations/boomcms",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
			"php artisan vendor:publish"
		]
	},
	"extra": {
        	"custom-installer": {
        	    "boomcms-theme": "storage/boomcms/themes/{$name}/"
        	}
	}
}
