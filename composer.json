{
    "name": "boomcms/boom-core",
    "description": "Core classes for BoomCMS",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-imagick": "*",
        "ext-zip": "*",
        "laravel/framework": "^10.0",
        "doctrine/dbal": "^3.0",
        "laravelcollective/html": "6.4.*",
        "lootils/geo": "^0.1.1",
        "php-ffmpeg/php-ffmpeg": "^1.2.0",
        "smalot/pdfparser": "*",
        "phpoffice/phpword": "1.2.*",
        "mpratt/embera": "2.0.*",
        "genphrase/genphrase": "1.*",
        "bordoni/phpass": "dev-main",
        "intervention/imagecache": "2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "1.6.*",
        "laravel/laravel": "^10.0",
        "symfony/dom-crawler": "7.0.*",
        "laravel/browser-kit-testing": "7.*"
     
    },
    "autoload": {
        "psr-4": {
            "BoomCMS\\": "src/BoomCMS/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BoomCMS\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit"
    }
}
