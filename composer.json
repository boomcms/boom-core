{
	"name":        "boomcms/boom-core",
	"description": "Core classes for BoomCMS",
	"license":     "MIT",
	"require": {
		"php":        ">=5.3",
		"ext-imagick" : "*",
		"mpratt/embera": "~1.0",
                "genphrase/genphrase" : "1.0.*",
		"hautelook/phpass": "dev-master",
		"thujohn/rss": "dev-master",
		"intervention/imagecache" : "2.*",
		"laravel/framework": "~5.0",
		"symfony/http-kernel": "2.6.*",
		"rych/bytesize": "1.0.*",
		"illuminate/html": "5.*",
		"doctrine/dbal": "~2.3"
	},
	"require-dev": {
		"phpunit/phpunit": "4.3.*",
		"Mockery/Mockery": "^0.9.4",
		"laravel/laravel": "~5.0"
	},
	"autoload": {
		"psr-4": {"BoomCMS\\": "src/BoomCMS/"}
	},
	"minimum-stability" : "dev",
	"prefer-stable": true,
	"scripts": {
	"post-install-cmd": [
		"npm install",
            		"bower install",
			"grunt dist"
        	],
        	"post-update-cmd": [
			"npm install",
            		"bower install",
			"grunt dist"
        	]
    	}
}
