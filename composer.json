{
	"name":        "boomcms/boom-core",
	"description": "Core classes for BoomCMS",
	"license":     "BSD-3-Clause",
	"require": {
		"php":        ">=5.3",
		"ext-imagick" : "*",
		"mpratt/embera": "~1.0",
		"ezyang/htmlpurifier": "4.6.*",
                "genphrase/genphrase" : "1.0.*",
		"davechild/textstatistics": "1.0.*@dev",
		"hautelook/phpass": "dev-master",
		"thujohn/rss": "dev-master",
		"intervention/imagecache" : "2.1.*",
		"robbytaylor/htmlpurifier-tel" : "dev-master",
		"psr/log": "~1.0",
		"cartalyst/sentry": "2.1.*",
		"illuminate/support": "5.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "4.3.*"
	},
	"autoload": {
		"psr-0": {"BoomCMS\\Core": "src/"}
	},
	"minimum-stability" : "dev",
	"prefer-stable": true,
	"scripts": {
        	"post-install-cmd": [
			"npm install",
            		"bower install",
			"grunt dist"
        	],
        	"post-update-cmd": [
			"npm install",
            		"bower install",
			"grunt build"
        	]
    	}
}
