{
	"name": "boomcms/boomcms",
	"description": "BoomCMS basic site",
	"require": {
		"boomcms/boom-core": "3.0.*",
		"boomcms/boom-installer": "1.0.*",
                "boomcms/theme-default": "1.0.*"
	},
	"license": "MIT",
	"authors": [
		{
			"name": "Rob Taylor",
			"email": "rob@uxblondon.com"
		}
	],
	"autoload": {
		"psr-4": {
			"App\\": "app/"
		},
		"classmap": [
			"storage/boomcms/themes/"	
		]
	},
    "minimum-stability": "dev",
	"config": {
		"preferred-install": "dist"
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan boomcms:installTemplates",
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
			"php artisan boomcms:installTemplates",
			"php artisan migrate --path=vendor/boomcms/boom-core/src/database/migrations",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate",
			"php artisan vendor:publish"
		]
	}
}
