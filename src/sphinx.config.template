}

source @app.name@-pages-site
{
	type		= mysql
	sql_host	= localhost
	sql_user	= root
	sql_pass	= hoopster
	sql_db		= thisishoop3_dev

	sql_query	= select page.id, page.id as page_id, title, internal_name, parent_id, visible_in_leftnav, visible_in_leftnav_cms, title as title2, visible_from from page inner join page_v on active_vid = page_v.id inner join page_mptt on page.id = page_mptt.id where (visible = true or (visible_from < unix_timestamp(now()) and (visible_to = 0 or visible_to > unix_timestamp(now()))))

