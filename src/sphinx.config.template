	sql_attr_uint	= parent_id
	sql_attr_uint	= page_id
	sql_attr_uint	= visible_in_leftnav
	sql_attr_uint	= visible_in_leftnav_cms
	sql_attr_timestamp = visible_from

	sql_attr_multi	= uint tags from query; select object_id, tag_id from tagged_objects where object_type = 2;
}

