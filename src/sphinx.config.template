#############################################################################
## index definition
#############################################################################

index @app.name@-page_text
{
	source			= @app.name@-page_text
	path			= /var/lib/sphinxsearch/data/@app.name@.page_text

	docinfo			= extern
	mlock			= 0
	morphology		= none

	min_word_len	= 2
	charset_type	= utf-8
	html_strip		= 1

    enable_star     = 1
    min_infix_len   = 2
    prefix_fields	= text, title, description, keywords
	infix_fields	= text, title, description, keywords

	#ignore_chars		= U+002E
}

index @app.name@-page_text-delta : @app.name@-page_text
{
	source			= @app.name@-page_text-delta
	path			= /var/lib/sphinxsearch/data/@app.name@.page_text.delta
	morphology		= stem_en
}

index @app.name@-pages-site
{
        source                  = thisishoop3-pages-site
        path                    = /var/lib/sphinxsearch/data/thisishoop3.pages.site
}

index @app.name@-pages-cms
{
        source                  = thisishoop3-pages-cms
        path                    = /var/lib/sphinxsearch/data/thisishoop3.pages.cms
}